<%= form_for local_assigns[:contact], html: local_assigns[:html] do |f| %>
  <div class="flex flex-wrap bg-green-500 text-white rounded py-2 px-3 mb-4 shadow-md" id="contact_success" style="display:none;"></div>
  <div class="flex flex-wrap bg-red-500 text-white rounded py-2 px-3 mb-4 shadow-md" id="contact_failure" style="display:none;"></div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <%= f.label :name, 'Your Name', class: 'block tracking-wide text-gray-700 font-bold mb-2' %>
      <%= f.text_field :name, class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500', placeholder: 'Full Name', required: true %>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <%= f.label :email, 'Your Email', class: 'block tracking-wide text-gray-700 font-bold mb-2' %>
      <%= f.email_field :email, class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500', placeholder: 'your@email.com', required: true %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <%= f.label :content, 'Your Message', class: 'block tracking-wide text-gray-700 font-bold mb-2' %>
      <%= f.text_area :content, class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500', rows: 5, placeholder: '...', required: true %>
    </div>
  </div>
  <%# This is our honey pot for spam bots %>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <%= label_tag ContactsController::HONEY_POT_PARAM, 'Human Verification', class: 'block tracking-wide text-gray-700 font-bold mb-2' %>
      <%= text_field_tag ContactsController::HONEY_POT_PARAM, 'Delete this text', class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
    </div>
  </div>
  <%# End honey pot %>
  <div class="text-right">
    <%= button_tag type: 'submit', class: 'btn btn-primary', id: 'contact_submit', disabled: true do %>
      Send Message
    <% end %>
  </div>
<% end %>
