<%= render 'navbar' %>

<section class="flex flex-col items-center h-screen bg-gray-100 pt-10 mx-auto">
  <div class="w-full max-w-lg md:max-w-4xl mx-auto p-8">
    <div class="text-xl text-gray-900 text-center">Contact Me</div>
    <div class="text-gray-600 text-center">Want to chat? Shoot me a message using the form below.</div>

    <div class="flex flex-wrap -mx-1 md:-mx-3 md:-mt-3">
      <div class="mt-4 md:mt-6 md:px-2 px-1 w-full md:w-2/3 mx-auto">
        <div class="rounded-lg bg-white shadow-lg hover:shadow-xl p-5">
          <%= form_for @contact, html: { class: 'w-full max-w-lg' } do |f| %>
            <div class="flex flex-wrap -mx-3 mb-6">
              <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                <label class="block tracking-wide text-gray-700 font-bold mb-2" for="contact_name">
                  Your Name
                </label>
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="contact_name" name="contact[name]" type="text" placeholder="Full Name">
              </div>
              <div class="w-full md:w-1/2 px-3">
                <label class="block tracking-wide text-gray-700 font-bold mb-2" for="contact_email">
                  Your Email
                </label>
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="contact_email" name="contact[email]" type="email" placeholder="your@email.com">
              </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
              <div class="w-full px-3">
                <label class="block tracking-wide text-gray-700 font-bold mb-2" for="contact_content">
                  Your Message
                </label>
                <textarea class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" row="5" placeholder="..." required="required" name="contact[content]" id="contact_content"></textarea>
              </div>
            </div>
            <div class="text-right">
              <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
                <i class="fa fa-check"></i> Submit
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
