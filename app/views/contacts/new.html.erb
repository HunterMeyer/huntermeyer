<%= render 'navbar' %>

<section class="flex flex-col items-center h-screen bg-gray-100 pt-10">
  <div class="w-full max-w-lg md:max-w-4xl mx-auto p-8">
    <div class="text-xl text-gray-900">Contact Me</div>
    <div class="text-gray-600">Want to chat? Shoot me a message using the form below.</div>

    <div class="flex flex-wrap -mx-1 md:-mx-3 md:-mt-3">
      <div class="mt-4 md:mt-6 md:px-2 px-1 w-2/3">
        <div class="rounded-lg bg-white shadow-lg hover:shadow-xl p-5">
          <%= form_for @contact do |f| %>
            <fieldset>
              <div>
                <%= f.text_field :name, placeholder: 'Your name', required: true %>
              </div>
              <div>
                <%= f.text_field :email, placeholder: 'your@email.com', required: true %>
              </div>
              <div>
                <%= f.text_area :content, row: '15', placeholder: 'Your message', required: true %>
              </div>
              <div class="text-right">
                <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
                  <i class="fa fa-check"></i> Submit
                <% end %>
              </div>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
