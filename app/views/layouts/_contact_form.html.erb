<div id='myModal' class='modal hide fade' tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true'>
  <div class='modal-header'>
    <button type='button' class='close' data-dismiss='modal' aria-hidden='true'>Ã—</button>
    <h3 id='myModalLabel'><i class='icon-mail'></i> Contact Me</h3>
  </div>
  <div class='modal-body'>
    <%= form_for @contact, remote: true do |f| %>
      <%= f.text_field :name,    placeholder: 'Your Name' %>
      <%= f.text_field :email,   placeholder: 'Your Email' %>
      <%= f.text_area  :content, placeholder: 'Your Message', rows: 3, style: 'width: 80%' %>
      <br>
      <%= f.submit 'SUBMIT', class: 'btn btn-large' %>
    <% end %>
  </div>
</div>
