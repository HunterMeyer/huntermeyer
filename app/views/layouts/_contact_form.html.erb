<section id='contact'>
  <div class='row section-head'>
    <div class='twelve columns'>
      <div style='text-align: center; font-size: 80px; color: #fff;'><%= fa_icon('envelope') %></div>
      <p class='lead' style='text-align: center; margin: 10px 0 5px 0;'>
        Want to chat? Shoot me a message using the form below.
      </p>
    </div>
  </div>
  <div class='row'>
    <div class='six columns centered'>
      <%= form_for @contact, remote: true, html: { id: 'contactForm' } do |f| %>
        <fieldset>
          <div>
            <%= f.text_field :name, id: 'contactName', size: '35', placeholder: 'Your name' %>
          </div>
          <div>
            <%= f.text_field :email, id: 'contactEmail', size: '35', placeholder: 'your@email.com' %>
          </div>
          <div>
            <%= f.text_area :content, row: '15', id: 'contactMessage', placeholder: 'Your message' %>
          </div>
          <div>
            <%= button_tag fa_icon('check', text: 'Submit'), type: 'submit', class: 'submit' %>
          </div>
        </fieldset>
      <% end %>
      <div id='message-warning'></div>
      <div id='message-success'>
        <%= fa_icon('check', text: 'Your message was sent, thank you!') %>
      </div>
    </div>
  </div>
</section>
