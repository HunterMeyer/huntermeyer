<section class="flex bg-gray-100">
  <div class="w-full max-w-lg md:max-w-4xl mx-auto p-8">
    <div class="text-xl text-gray-900">What I've Studied</div>
    <div class="text-gray-600">Some of the rewarding knowledge I've acquired</div>

    <div class="flex flex-wrap -mx-1 md:-mx-3 md:-mt-3">
      <% Education.visible.order(:ordinal).limit(4).each do |edu| %>
        <div class="mt-1 md:mt-6 md:px-2 px-1 w-full md:w-1/2">
          <div class="flex items-center rounded-lg bg-white shadow-lg hover:shadow-xl overflow-hidden">
            <div class="px-6 py-4 self-start">
              <h3 class="text-md font-semibold text-gray-800"><%= edu.school %></h3>
              <p class="text-sm text-gray-600"><%= edu.concentration %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
